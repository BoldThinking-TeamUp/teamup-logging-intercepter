{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "rules": {
    "semicolon":false
  },
  "include": [
    "./src/**/*",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "/.git",
    "package.json",
  ]
}
